package shapes.quadrialaterals;

import shapes.Shapes;

public class Quadrialateral extends Shapes {
	private double length1;
	private double width;
	private double width1;
	

	/*public Quadrialateral() {
		// TODO Auto-generated constructor stub
	}*/
	public Quadrialaterals(String name,double length,double width,double length1,double width1) {
		super(name,length);
		this.width = width;
		this.length1 = length1;
		this.width1 = width1;
		
	}
	
	@Override
	public double perimetr() {
		return getLength()+getWidth()+getLength1()+getWidth1();
	}
	@Override
	public String toString() {
		return return "Фигура: "+getName()+" Периметр: "+perimetr();
	}

}
