package shapes;

public class Hexagon extends Shapes {
	private double sideLength;

	public Hexagon() {
		// TODO Auto-generated constructor stub
	}
	public Hexagon(String name,double sideLength,double width) {
		super (name,width);
		this.sideLength = sideLength;
	}
	
	@Override
	public double perimetr(sideLength) {
		return 6*sideLength;
	}
	@Override
	public String toString() {
		return "Фигура: "+getName()+" Периметр: "perimetr(double sideLength);
	}


}
