package shapes;

public class Circle extends Shape {
	private double r;
	
	public Circle() {
		// TODO Auto-generated constructor stub
	}
	public Circle(String name,double r) {
		super (name);
		this.r = r;
	}
	
	@Override
	public double perimetr() {
		return 2*Math.PI*r;
	}
	@Override
	public String toString() {
		return "Фигура: "+getName()+" Периметр: "perimetr();
	}

}
